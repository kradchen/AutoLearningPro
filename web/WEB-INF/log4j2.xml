<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <!-- 标准输出 -->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <!-- 输出格式 -->
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- 配置记录器级别 -->
        <Root level="debug">
            <!-- 输出设置 -->
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>